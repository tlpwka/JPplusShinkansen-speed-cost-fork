		loading_speed:					35 * CapacityFactor() / param_loading_2D;					// Capacity divided by door loading factor
		cargo_age_period:				param_decay_express;
		cost_factor:                    105 * param_purchase_cost;
        running_cost_factor:            (295 + 120 * NumberCarsInConsist() * param_A / param_B ) * RunningCostFactor() * param_running_cost;
		purchase_running_cost_factor:   295 * param_running_cost + 120 * param_running_cost * NumberCarsInConsist();
	}

